<odoo>
    <record id="view_purchase_cancel_wizard" model="ir.ui.view">
        <field name="name">purchase.cancel.wizard.form</field>
        <field name="model">purchase.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Purchase Order">
                <group>
                    <field name="reason_id"/>
                </group>
                <footer>
                    <button string="Confirm Cancel" type="object" name="action_confirm_cancel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>